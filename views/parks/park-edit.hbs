<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Editar parque</h1>
        </div>

        <div class="col-md-6">
            <form action="/parks/edit?id={{this.id}}" method="POST">
                <div class="form-group">
                    <label for="name-input">Nombre</label>
                    <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="description-input">Descripci√≥n</label>
                    <input name="description" type="text" class="form-control" id="description-input"
                        value="{{description}}">
                </div>
                <div class="form-group form-check">
                    <input name="active" type="checkbox" class="form-check-input" id="active-input" {{isChecked
                        active}}>
                    <label class="form-check-label" for="active-input">Activa</label>
                </div>


                <button type="submit" class="btn btn-dark">Editar parque</button>
                <a href="/parks" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>